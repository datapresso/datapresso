<cas2jdbc:cas2JdbcConfiguration xmlns:cas2jdbc="http://www.ibm.com/uima/consumer/cas2jdbc/100/xml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.ibm.com/uima/consumer/cas2jdbc/100/xml configuration.xsd ">
<databaseConnection>

  <connectionUrl>postgresql://localhost:5432/cas2jdbc</connectionUrl> 
  <driver type="jdbc">org.postgresql.Driver</driver> 
 <driverLibraries>
  <driverLibrary>c:/java/lib/postgresql-8.1-408.jdbc3.jar</driverLibrary> 
  </driverLibraries>
 <authentication>
  <username>tutorial</username> 
  <password>password</password> 
  </authentication>
  </databaseConnection>
	<cas2JdbcMappingSpec>
		<cas2JdbcMappings>
			<explicitMappings>
				<explicitMappingRule applyToSubtypes="false">
					<type>uima.tcas.DocumentAnnotation</type>
					<table>documents</table>
					<featureMappings>
						<featureMapping>
							<feature>uniqueId()</feature>
							<column>docid</column>
						</featureMapping>
						<featureMapping>
							<feature>docUri()</feature>
							<length>200</length>
							<column>uri</column>
						</featureMapping>
						<featureMapping>
							<feature>sentenceCount</feature>
							<column>sentencecount</column>
						</featureMapping>
						<featureMapping>
							<feature>tokenCount</feature>
							<column>tokencount</column>
						</featureMapping>
						<featureMapping>
							<feature>language</feature>
							<length>5</length>
							<column>language</column>
						</featureMapping>
						<featureMapping>
							<feature>esDocumentMetaData/docType</feature>
							<length>25</length>
							<column>filetype</column>
						</featureMapping>
						<containerMapping>
							<feature>authorArray</feature>
							<table>docs_authors</table>
							<featureMappings>
								<featureMapping>
									<feature>parentUniqueId()</feature>
									<column>docid</column>
								</featureMapping>
								<featureMapping>
									<feature>[]/uniqueId()</feature>
									<column>authorid</column>
								</featureMapping>
							</featureMappings>
						</containerMapping>
					</featureMappings>
				</explicitMappingRule>
				
			<explicitMappingRule applyToSubtypes="false">
					<type>com.ibm.es.tutorial.cas2jdbc.types.PersonAnnotation</type>
					<table>persons</table>
					<featureMappings>
						<featureMapping>
							<feature>uniqueId()</feature>
							<column>personid</column>
						</featureMapping>
						<featureMapping>
							<feature>firstname</feature>
							<length>30</length>
							<column>firstname</column>
						</featureMapping>
						<featureMapping>
							<feature>lastname</feature>
							<length>30</length>
							<column>lastname</column>
						</featureMapping>
						<featureMapping>
							<feature>gender</feature>
							<length>10</length>
							<column>gender</column>
						</featureMapping>
						<featureMapping>
							<feature>age</feature>
							<column>age</column>
						</featureMapping>
					</featureMappings>
				</explicitMappingRule> 
			</explicitMappings>
		</cas2JdbcMappings>
	</cas2JdbcMappingSpec>
</cas2jdbc:cas2JdbcConfiguration>
