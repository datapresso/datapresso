<?xml version="1.0" encoding="UTF-8"?>
<cas2jdbc:cas2JdbcConfiguration xmlns:cas2jdbc="http://www.ibm.com/uima/consumer/cas2jdbc/100/xml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.ibm.com/uima/consumer/cas2jdbc/100/xml configuration.xsd ">
<databaseConnection>
  <connectionUrl>postgresql://localhost:5432/cers</connectionUrl> 
  <driver type="jdbc">org.postgresql.Driver</driver> 
 <driverLibraries>
  <driverLibrary>c:/java/lib/postgresql-8.1-408.jdbc3.jar</driverLibrary> 
  </driverLibraries>
 <authentication>
  <username>cersuser</username> 
  <password>cersuser</password> 
  </authentication>
  </databaseConnection>
	<cas2JdbcMappingSpec>
		<cas2JdbcMappings>
			<explicitMappings>
				<explicitMappingRule applyToSubtypes="false">
					<type>com.dp.edgar.uima.type.Company</type>
					<table>company</table>
					<featureMappings>
						<featureMapping>
							<feature>uniqueId()</feature>
							<column>id</column>
						</featureMapping>
						<featureMapping>
							<feature>name</feature>
							<length>200</length>
							<column>name</column>
						</featureMapping>
						<featureMapping>
							<feature>street</feature>
							<column>address</column>
						</featureMapping>
						<featureMapping>
							<feature>city</feature>
							<column>city</column>
						</featureMapping>
						<featureMapping>
							<feature>state</feature>
							<column>state</column>
						</featureMapping>
						<featureMapping>
							<feature>country</feature>
							<column>country</column>
						</featureMapping>
						<featureMapping>
							<feature>zip</feature>
							<column>zip</column>
						</featureMapping>
						<featureMapping>
							<feature>cik</feature>
							<length>20</length>
							<column>cik</column>
						</featureMapping>
					</featureMappings>
				</explicitMappingRule>
			<explicitMappingRule applyToSubtypes="false">
							<type>com.dp.edgar.uima.type.Compensation</type>
							<table>compensation</table>
							<featureMappings>
								<featureMapping>
									<feature>companyid</feature>
									<length>20</length>
									<column>companyid</column>
								</featureMapping>
						<featureMapping>
							<feature>name</feature>
							<length>100</length>
							<column>name</column>
						</featureMapping>
						<featureMapping>
							<feature>position</feature>
							<length>100</length>
							<column>position</column>
						</featureMapping>
						<featureMapping>
							<feature>year</feature>
							<column>year</column>
						</featureMapping>
						<featureMapping>
							<feature>salary</feature>
							<column>salary</column>
						</featureMapping>
						<featureMapping>
							<feature>bonus</feature>
							<column>bonus</column>
						</featureMapping>
						<featureMapping>
							<feature>options</feature>
							<column>stock_options</column>
						</featureMapping>
						<featureMapping>
							<feature>all</feature>
							<column>all_other_compensation</column>
						</featureMapping>
							</featureMappings>
				</explicitMappingRule> 
			<explicitMappingRule applyToSubtypes="false">
					<type>com.dp.edgar.uima.type.Person</type>
					<table>person</table>
					<featureMappings>
						<featureMapping>
							<feature>uniqueId()</feature>
							<column>id</column>
						</featureMapping>
						<featureMapping>
							<feature>firstname</feature>
							<length>50</length>
							<column>firstname</column>
						</featureMapping>
						<featureMapping>
							<feature>lastname</feature>
							<length>50</length>
							<column>lastname</column>
						</featureMapping>
						<featureMapping>
							<feature>middlename</feature>
							<length>50</length>
							<column>middlename</column>
						</featureMapping>
						<featureMapping>
							<feature>companyid</feature>
							<column>companyid</column>
						</featureMapping>
					</featureMappings>
				</explicitMappingRule> 
			</explicitMappings>
		</cas2JdbcMappings>
	</cas2JdbcMappingSpec>
</cas2jdbc:cas2JdbcConfiguration>
